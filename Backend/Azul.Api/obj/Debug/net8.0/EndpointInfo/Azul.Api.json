{
  "openapi": "3.0.1",
  "info": {
    "title": "Azul API",
    "description": "REST API for online Azul gameplay",
    "version": "v1"
  },
  "paths": {
    "/api/Authentication/register": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Registers a new user in the database.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/api/Authentication/token": {
      "post": {
        "tags": [
          "Authentication"
        ],
        "summary": "Returns an object containing a (bearer) token that will be valid for 60 minutes.\r\nThe token should be added in the Authorization header of each http request for which the user must be authenticated.\r\nThe Id and NickName of the player are also included in the object.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/AccessPassModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessPassModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/AccessPassModel"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/Games/{id}": {
      "get": {
        "tags": [
          "Games"
        ],
        "summary": "Gets information about a game",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id (guid) of the game",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/GameModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/GameModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Games/{id}/take-tiles": {
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Takes all the tiles of a type from a factory display or from the table center (which is a special kind of factory display).\r\nThe tiles are taken by the player associated with the authenticated user.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id (guid) of the game",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Information about the move the player wants to make.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TakeTilesModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TakeTilesModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TakeTilesModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Games/{id}/place-tiles-on-patternline": {
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Places the tiles the player has previously taken on a pattern line.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id (guid) of the game",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "requestBody": {
          "description": "Information about the move the player wants to make.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTilesModel"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTilesModel"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/PlaceTilesModel"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Games/{id}/place-tiles-on-floorline": {
      "post": {
        "tags": [
          "Games"
        ],
        "summary": "Places the tiles the player has previously taken on the floor line.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Id (guid) of the game",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/": {
      "get": {
        "tags": [
          "Home"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/ping": {
      "get": {
        "tags": [
          "Home"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/PingResultModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PingResultModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/PingResultModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Tables/{id}": {
      "get": {
        "tags": [
          "Tables"
        ],
        "summary": "Gets a specific table by its id.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          }
        }
      }
    },
    "/api/Tables/join-or-create": {
      "post": {
        "tags": [
          "Tables"
        ],
        "summary": "Searches a table with available seats that matches the given preferences.\r\nIf such a table is found, the user joins it.\r\nIf no table is found, a new table is created and the user joins the new table.\r\nIf the table has no available seats left, the game is started.",
        "description": "Tables are automatically removed from the system after 15 minutes.",
        "requestBody": {
          "description": "Contains info about the type of game you want to play.",
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/TablePreferences"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/TablePreferences"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/TablePreferences"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TableModel"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    },
    "/api/Tables/{id}/leave": {
      "post": {
        "tags": [
          "Tables"
        ],
        "summary": "Removes the user that is logged in from a table.\r\nIf no players are left at the table, the table is removed from the system.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "The unique identifier of the table.",
            "required": true,
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "404": {
            "description": "Not Found",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ProblemDetails"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorModel"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "AccessPassModel": {
        "type": "object",
        "properties": {
          "user": {
            "$ref": "#/components/schemas/UserModel"
          },
          "token": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "BoardModel": {
        "type": "object",
        "properties": {
          "patternLines": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PatternLineModel"
            },
            "nullable": true
          },
          "wall": {
            "type": "array",
            "items": { },
            "nullable": true
          },
          "floorLine": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileSpotModel"
            },
            "nullable": true
          },
          "score": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ErrorModel": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FactoryDisplayModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tiles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileType"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "GameModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "players": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerModel"
            },
            "nullable": true
          },
          "playerToPlayId": {
            "type": "string",
            "format": "uuid"
          },
          "tileFactory": {
            "$ref": "#/components/schemas/TileFactoryModel"
          },
          "roundNumber": {
            "type": "integer",
            "format": "int32"
          },
          "hasEnded": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "ITablePreferences": {
        "type": "object",
        "properties": {
          "numberOfPlayers": {
            "type": "integer",
            "description": "Total number of players that can take part in the game.\r\nThe default value is 2.",
            "format": "int32",
            "default": 2
          },
          "numberOfArtificialPlayers": {
            "type": "integer",
            "description": "Number of artificial players that should take part in the game.\r\nThe default value is 0.\r\nMust be less than Azul.Core.TableAggregate.Contracts.ITablePreferences.NumberOfPlayers.",
            "format": "int32",
            "default": 0
          },
          "numberOfFactoryDisplays": {
            "type": "integer",
            "description": "Number of factory displays that are used in the game.\r\nThis value is calculated based on the Azul.Core.TableAggregate.Contracts.ITablePreferences.NumberOfPlayers.",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "LoginModel": {
        "required": [
          "email",
          "password"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "PatternLineModel": {
        "type": "object",
        "properties": {
          "length": {
            "type": "integer",
            "format": "int32"
          },
          "tileType": {
            "$ref": "#/components/schemas/TileType"
          },
          "numberOfTiles": {
            "type": "integer",
            "format": "int32"
          },
          "isComplete": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "PingResultModel": {
        "type": "object",
        "properties": {
          "isAlive": {
            "type": "boolean"
          },
          "greeting": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "PlaceTilesModel": {
        "type": "object",
        "properties": {
          "patternLineIndex": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "PlayerModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "lastVisitToPortugal": {
            "type": "string",
            "format": "date",
            "nullable": true
          },
          "board": {
            "$ref": "#/components/schemas/BoardModel"
          },
          "hasStartingTile": {
            "type": "boolean"
          },
          "tilesToPlace": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileType"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ProblemDetails": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "nullable": true
          },
          "title": {
            "type": "string",
            "nullable": true
          },
          "status": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "detail": {
            "type": "string",
            "nullable": true
          },
          "instance": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": { }
      },
      "RegisterModel": {
        "required": [
          "email",
          "password",
          "userName"
        ],
        "type": "object",
        "properties": {
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "userName": {
            "minLength": 1,
            "type": "string"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          },
          "lastVisitToPortugal": {
            "type": "string",
            "format": "date",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TableCenterModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "tiles": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TileType"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "TableModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "preferences": {
            "$ref": "#/components/schemas/ITablePreferences"
          },
          "seatedPlayers": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/PlayerModel"
            },
            "nullable": true
          },
          "hasAvailableSeat": {
            "type": "boolean"
          },
          "gameId": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      },
      "TablePreferences": {
        "type": "object",
        "properties": {
          "numberOfPlayers": {
            "type": "integer",
            "format": "int32",
            "default": 2
          },
          "numberOfArtificialPlayers": {
            "type": "integer",
            "format": "int32",
            "default": 0
          },
          "numberOfFactoryDisplays": {
            "type": "integer",
            "format": "int32",
            "readOnly": true
          }
        },
        "additionalProperties": false
      },
      "TakeTilesModel": {
        "type": "object",
        "properties": {
          "displayId": {
            "type": "string",
            "format": "uuid"
          },
          "tileType": {
            "$ref": "#/components/schemas/TileType"
          }
        },
        "additionalProperties": false
      },
      "TileFactoryModel": {
        "type": "object",
        "properties": {
          "displays": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FactoryDisplayModel"
            },
            "nullable": true
          },
          "tableCenter": {
            "$ref": "#/components/schemas/TableCenterModel"
          },
          "isEmpty": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TileSpotModel": {
        "type": "object",
        "properties": {
          "type": {
            "$ref": "#/components/schemas/TileType"
          },
          "hasTile": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TileType": {
        "enum": [
          0,
          11,
          12,
          13,
          14,
          15
        ],
        "type": "integer",
        "format": "int32"
      },
      "UserModel": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "userName": {
            "type": "string",
            "nullable": true
          },
          "lastVisitToPortugal": {
            "type": "string",
            "format": "date",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
